programa
{
	
	funcao inicio()
	{
		caracter continua
		
		
		faca
		{
			inteiro p1, p2, p3
			limpa ()
			escreva ("*** Qual o produto comprar***\n")

			escreva ("Informe o valor do produto 1: ")
			leia (p1)
			escreva ("\nInforme o valor do produto 2: ")
			leia (p2)
			escreva ("\nInforme o valor do produto 3: ")
			leia (p3)

			
			se (p1 < p2 e p1 < p3)
			{
				escreva("\nO primeiro produto é de menor valor!")
			}
			se (p2 < p1 e p2 < p3)
			{
				escreva("\nO segundo produto é de menor valor!")
			}
			se (p3 < p1 e p3 < p2)
			{
				escreva("\nO terceiro produto é de menor valor!")
			}
			

							
//perguntar se continua a execução do programa
			escreva("\nContinua a Execução do Programa? ")
			leia (continua)

		}
		enquanto (continua == 'S' ou continua == 's')
		escreva("\nO programa foi finalizado!!!")
	}
}